<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#36DC7A">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_screen_id"
        android:layout_marginTop="30dp"
        android:paddingBottom="80dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:textSize="20dp" />




    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_amount_dollar_id"
        android:hint="Amount in $"
        android:textColorHint="#000000"
        android:layout_below="@id/tv_screen_id"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:inputType="number"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_amount_sh_id"
        android:hint="Amount in sh"
        android:textColorHint="#000000"
        android:layout_below="@id/et_amount_dollar_id"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:inputType="number"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_Eur_id"
        android:hint="Amount in Eur"
        android:textColorHint="#000000"
        android:layout_below="@id/et_amount_sh_id"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:inputType="number"/>

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/bt_sh_2_id"
       android:text="Amount in sh"
       android:layout_toRightOf="@id/et_amount_dollar_id"
       android:layout_below="@id/tv_screen_id"
       android:layout_marginTop="40dp"
       android:layout_marginLeft="35dp"
       android:textStyle="bold"
       android:onClick="shillingMethod"/>


    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bt_Eur_2_id"
    android:text="Amount in Eur"
    android:layout_toRightOf="@id/et_amount_sh_id"
    android:layout_below="@id/bt_sh_2_id"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="35dp"
    android:textStyle="bold"
    android:onClick="EurMethod"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_dollar_2_id"
        android:text="Amount in $"
        android:layout_toRightOf="@id/et_Eur_id"
        android:layout_below="@id/bt_Eur_2_id"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:textStyle="bold"
        android:onClick="dollarMethod"/>



























</RelativeLayout>