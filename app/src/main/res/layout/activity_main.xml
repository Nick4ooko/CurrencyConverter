<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#36DC7A">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_screen_id"
        android:layout_marginTop="30dp"
        android:paddingBottom="80dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:textSize="20dp" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_enter_amount"
        android:hint="Enter Amount"
        android:textColorHint="#000000"
        android:layout_below="@id/tv_screen_id"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        android:inputType="number"/>

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sh-$"
        android:id="@+id/bt_dollar_id"
    android:layout_below="@id/et_enter_amount"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="50dp"
        android:onClick="dollarsMethod"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_shillings_id"
        android:text="$-Sh"
        android:onClick="shillingsMethod"
        android:layout_marginLeft="180dp"
        android:layout_below="@id/et_enter_amount"
        android:layout_marginTop="40dp"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_euro_id"
        android:text="Euro-Sh"
        android:onClick="euroMethod"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/bt_dollar_id"
        android:layout_marginTop="40dp"/>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_sh-euro_id"
        android:text="Sh-Euro"
        android:onClick="shMethod"
        android:layout_marginLeft="180dp"
        android:layout_below="@id/bt_shillings_id"
        android:layout_marginTop="40dp"/>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_do-euro_id"
        android:text="$-Euro"
        android:onClick="dollartoeuroMethod"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/bt_euro_id"
        android:layout_marginTop="40dp"/>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_euro_dollar_id"
        android:text="Euro-$"
        android:onClick="eurotodollarMethod"
        android:layout_marginLeft="180dp"
        android:layout_below="@id/bt_euro_id"
        android:layout_marginTop="40dp"/>































</RelativeLayout>