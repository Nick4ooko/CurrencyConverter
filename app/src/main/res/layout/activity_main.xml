<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#36DC7A">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_screen_id"
        android:layout_marginTop="30dp"
        android:paddingBottom="80dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:textSize="30dp"
        android:textAlignment="textEnd"/>



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_enter_amount"
        android:hint="Enter Amount"
        android:textColorHint="#000000"
        android:layout_below="@id/tv_screen_id"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"
        android:inputType="number"
        android:background="@drawable/enter_amount_border"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="7dp"
        android:paddingBottom="6dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sh-$"
        android:id="@+id/bt_dollar_id"
        android:layout_below="@id/et_enter_amount"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:onClick="dollarsMethod"
        android:background="@drawable/sh_to_dollar"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_shillings_id"
        android:text="$-Sh"
        android:onClick="shillingsMethod"
        android:layout_marginLeft="180dp"
        android:layout_below="@id/et_enter_amount"
        android:layout_marginTop="30dp"
        android:background="@drawable/dollar_shilling"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_euro_id"
        android:text="Euro-Sh"
        android:onClick="euroMethod"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/bt_dollar_id"
        android:layout_marginTop="30dp"
        android:background="@drawable/euro_shilling_border"/>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_sh-euro_id"
        android:text="Sh-Euro"
        android:onClick="shMethod"
        android:layout_marginLeft="180dp"
        android:layout_below="@id/bt_shillings_id"
        android:layout_marginTop="30dp"
        android:background="@drawable/shilling_euro_border"/>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_do-euro_id"
        android:text="$-Euro"
        android:onClick="dollartoeuroMethod"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/bt_euro_id"
        android:layout_marginTop="30dp"
        android:background="@drawable/dollar_euro_border"/>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_euro_dollar_id"
        android:text="Euro-$"
        android:onClick="eurotodollarMethod"
        android:layout_marginLeft="180dp"
        android:layout_below="@id/bt_euro_id"
        android:layout_marginTop="30dp"
        android:background="@drawable/euro_dollar_border"/>































</RelativeLayout>